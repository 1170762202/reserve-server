<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zlx.reverce.dao.ReserveOrderDao">

    <select id="selectAll" resultType="map">
        SELECT * from r_order
    </select>

    <insert id="insertOrder" parameterType="com.zlx.reverce.domain.ReserveOrder">
        insert into r_order(
        reserve_phone,address,join_number,reserve_type,start_date,end_date,budget)value(
        #{od.reserve_phone},
        #{od.address},
        #{od.join_number},
        #{od.reserve_type},
        #{od.start_date},
        #{od.end_date},
        #{od.budget})
    </insert>
</mapper>