<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zlx.reverce.dao.UserDao">

    <select id="selectAll" resultType="map">
        SELECT * from user
    </select>

    <insert id="insertUser" parameterType="com.zlx.reverce.domain.User">
        insert into user(name)value(#{user.name})
    </insert>

    <select id="findUser" resultType="com.zlx.reverce.domain.User">
        select * from user where account = #{account} and password = #{password}
    </select>
 <select id="findUserById" resultType="com.zlx.reverce.domain.User">
        select * from user where id = #{user_id}
    </select>

    <delete id="deleteUser" parameterType="long">
        delete from user where id = #{id}
    </delete>

    <update id="updateUserName">
        update user set name = #{name} where id = #{id}
    </update>
</mapper>